    <script>
        // --- å–®å­—è³‡æ–™åº« ---
        const words = [
            {
                en: "planet",
                zh: "è¡Œæ˜Ÿï¼›æ˜Ÿçƒ",
                level: "Lv.1 - åŸºç¤åè©",
                hint: "Earth is a planet in the solar system."
            },
            {
                en: "gear",
                zh: "é½’è¼ªï¼›è£å‚™",
                level: "Lv.1 - é—œéµå­—",
                hint: "The bikeâ€™s gear makes it easier to ride uphill."
            },
            {
                en: "memory",
                zh: "è¨˜æ†¶ï¼›å›æ†¶",
                level: "Lv.1 - æŠ½è±¡åè©",
                hint: "This song brings back a happy memory."
            },
            {
                en: "focus",
                zh: "å°ˆæ³¨ï¼›é›†ä¸­",
                level: "Lv.1 - å‹•è© / åè©",
                hint: "Turn off your phone so you can focus on studying."
            },
            {
                en: "routine",
                zh: "ä¾‹è¡Œå…¬äº‹ï¼›å›ºå®šæµç¨‹",
                level: "Lv.1 - ç”Ÿæ´»ç”¨èª",
                hint: "Having a morning routine can make your day smoother."
            },
             {
                en: "test",
                zh: "æ¸¬è©¦ï¼›æ¸¬é©—",
                level: "Lv.1 - ç”Ÿæ´»ç”¨èª",
                hint: "This is test 1."
            },
            {
                en: "watermelon",
                zh: "è¥¿ç“œ",
                level: "Lv.1 - ç”Ÿæ´»ç”¨èª",
                hint: "I have a water melon"
            }
        ];

        const STORAGE_KEY = "wordGearData_v1";

        // --- æ¯å€‹å–®å­—çš„è¨˜éŒ„è³‡æ–™ï¼ˆè¨˜å¾—/å¿˜äº† æ¬¡æ•¸ï¼‰ ---
        let stats = [];
        let currentIndex = 0;

        function createEmptyStats() {
            return words.map(() => ({
                remember: 0,
                forget: 0
            }));
        }

        // å¾ localStorage è¼‰å…¥è³‡æ–™
        function loadData() {
            const raw = localStorage.getItem(STORAGE_KEY);

            if (!raw) {
                // æ²’æœ‰å­˜éè³‡æ–™ï¼Œçµ¦é è¨­å€¼
                stats = createEmptyStats();
                currentIndex = 0;
                return;
            }

            try {
                const data = JSON.parse(raw);

                // æª¢æŸ¥ stats æ˜¯å¦æœ‰æ•ˆï¼Œé•·åº¦è¦è·Ÿ words ä¸€æ¨£
                if (Array.isArray(data.stats) && data.stats.length === words.length) {
                    stats = data.stats;
                } else {
                    stats = createEmptyStats();
                }

                // æª¢æŸ¥ currentIndex æ˜¯å¦åˆç†
                if (
                    typeof data.currentIndex === "number" &&
                    data.currentIndex >= 0 &&
                    data.currentIndex < words.length
                ) {
                    currentIndex = data.currentIndex;
                } else {
                    currentIndex = 0;
                }
            } catch (e) {
                // è‹¥è§£æå¤±æ•—ï¼Œå°±é€€å›é è¨­å€¼
                console.error("è®€å–å„²å­˜è³‡æ–™æ™‚ç™¼ç”ŸéŒ¯èª¤ï¼Œä½¿ç”¨é è¨­å€¼ã€‚", e);
                stats = createEmptyStats();
                currentIndex = 0;
            }
        }

        // æŠŠ stats + currentIndex å­˜å› localStorage
        function saveData() {
            const data = {
                stats: stats,
                currentIndex: currentIndex
            };
            localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
        }

        // æ ¹æ“š stats ç®—å‡ºé½’è¼ªç­‰ç´š
        function getGearStatus(stat) {
            const score = stat.remember - stat.forget;

            if (score >= 8) {
                return {
                    label: "ğŸŸ¢ ç¶ è‰²é½’è¼ª Â· ç†Ÿç·´",
                    desc: "é€™å€‹å–®å­—ç›®å‰ç›¸å°ç©©å®šï¼Œå¯ä»¥é™ä½å‡ºç¾é »ç‡ï¼Œå¶çˆ¾å›é¡§å³å¯ã€‚",
                    bg: "rgba(22, 163, 74, 0.25)",
                    color: "#bbf7d0",
                    border: "1px solid rgba(34, 197, 94, 0.9)"
                };
            } else if (score >= 2) {
                return {
                    label: "ğŸŸ¡ é»ƒè‰²é½’è¼ª Â· æ­£åœ¨å»ºç«‹è¨˜æ†¶",
                    desc: "å·²æœ‰ä¸€å®šç†Ÿæ‚‰åº¦ï¼Œä½†é‚„æ²’åˆ°éå¸¸ç©©ã€‚å»ºè­°æŒçºŒä»¥æ­£å¸¸é »ç‡è¤‡ç¿’ã€‚",
                    bg: "rgba(234, 179, 8, 0.22)",
                    color: "#fef9c3",
                    border: "1px solid rgba(234, 179, 8, 0.9)"
                };
            } else {
                return {
                    label: "ğŸ”´ ç´…è‰²é½’è¼ª Â· é«˜é¢¨éšªå–®å­—",
                    desc: "é€™å€‹å–®å­—å®¹æ˜“å¿˜è¨˜ï¼Œå»ºè­°æé«˜å‡ºç¾é »ç‡ï¼Œç•¶æˆå„ªå…ˆè£œå¼·å°è±¡ã€‚",
                    bg: "rgba(239, 68, 68, 0.22)",
                    color: "#fee2e2",
                    border: "1px solid rgba(239, 68, 68, 0.9)"
                };
            }
        }

        function renderWord() {
            const word = words[currentIndex];
            const stat = stats[currentIndex];

            document.getElementById("wordEn").textContent = word.en;
            document.getElementById("wordZh").textContent = word.zh;
            document.getElementById("wordLevel").textContent = word.level;
            document.getElementById("wordHint").textContent = word.hint;

            document.getElementById("progressText").textContent =
                "é€²åº¦ï¼š" + (currentIndex + 1) + " / " + words.length;

            document.getElementById("wordStats").innerHTML =
                "<span>é€™å€‹å–®å­—ï¼šè¨˜å¾— " + stat.remember + " æ¬¡ Â· å¿˜äº† " + stat.forget + " æ¬¡</span>";

            const gear = getGearStatus(stat);
            const gearStatusEl = document.getElementById("gearStatus");
            const gearDescEl = document.getElementById("gearDesc");

            gearStatusEl.textContent = gear.label;
            gearStatusEl.style.background = gear.bg;
            gearStatusEl.style.color = gear.color;
            gearStatusEl.style.border = gear.border;

            gearDescEl.textContent = gear.desc;
        }

        function nextWord() {
            currentIndex = currentIndex + 1;

            if (currentIndex >= words.length) {
                currentIndex = 0; // è·‘å®Œä¸€åœˆå¾é ­é–‹å§‹
            }

            saveData(); // ä½ç½®æ”¹è®Šä¹Ÿè¦å­˜
            renderWord();
        }

        function markRemember() {
            stats[currentIndex].remember += 1;
            saveData();  // æ¬¡æ•¸æ”¹è®Šå°±å­˜èµ·ä¾†
            renderWord();
        }

        function markForget() {
            stats[currentIndex].forget += 1;
            saveData();
            renderWord();
        }
        function resetCurrent() {
    stats[currentIndex].remember = 0;
    stats[currentIndex].forget = 0;
    saveData();   // ä¹Ÿä¸€ä½µæ›´æ–°åˆ° localStorage
    renderWord(); // è®“ç•«é¢ä¸Šçš„æ¬¡æ•¸ & é½’è¼ªç«‹åˆ»åˆ·æ–°
}


        // ä¸€é€²é é¢ï¼šå…ˆè¼‰å…¥è³‡æ–™ï¼Œå†ç•«å‡ºç•«é¢
        loadData();
        renderWord();
    </script>
